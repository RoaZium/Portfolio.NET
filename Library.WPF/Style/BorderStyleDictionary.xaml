<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseStyleDictionary.xaml"/>
        <ResourceDictionary Source="../ControlTemplate/BorderControlTemplateDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--Client: Top Container-->
    <Style x:Key="Global_Border_TopContainer" TargetType="{x:Type Border}" >
        <Setter Property="Background" Value="{DynamicResource Global_SolidColorBrush_TopContainer}" />
        <Setter Property="CornerRadius" Value="8,8,0,0" />
    </Style>

    <!--Client: Center Container-->
    <Style x:Key="Global_Border_LayoutContainer" TargetType="{x:Type Border}" >
        <Setter Property="Background" Value="{DynamicResource Global_SolidColorBrush_CenterContainer}" />
        <Setter Property="CornerRadius" Value="0,0,8,8" />
    </Style>

</ResourceDictionary>