<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--기본 콤보박스 속성-->
    <Style x:Key="xComboBox_PropertyBase" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ComponentPropertyComboBox}">
        <Setter Property="Height" Value="25" />
    </Style>
    
    <Style x:Key="xComboBox_IconList" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource xComboBox_PropertyBase}">
        <Setter Property="ItemsSource" Value="{Binding ResourceIconList}" />
    </Style>

</ResourceDictionary>